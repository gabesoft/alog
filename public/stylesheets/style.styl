// mixins
top-linear-background(a, b)
  background -webkit-gradient(linear, left top, left bottom, from(a), to(b))
  background -webkit-linear-gradient(top, a, b)
  background -moz-linear-gradient(top, a, b)
  background linear-gradient(top, a, b)

box-sizing-border()
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  -ms-box-sizing border-box
  -0-box-sizing border-box
  box-sizing border-box

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  -o-box-shadow arguments
  box-shadow arguments

box-display()
  display: -webkit-box
  -webkit-box-orient horizontal
  -webkit-box-align stretch
  -webkit-box-pack left

  display: -moz-box
  -moz-box-orient horizontal
  -moz-box-align stretch
  -moz-box-pack left

flex(v)
  -webkit-box-flex v
  -moz-box-flex v
  box-flex v

// main style
body
  color #363636
  background #d2d2d2

.title 
  border-bottom 1px solid #535353
  overflow hidden
  height 50px
  line-height 50px

  background #575859
  top-linear-background(#575859, #272425)

.title
  font-weight bold
  font-size 18pt
  text-shadow 0 1px 1px #cccccc
  color #fffef7

.title span
  display inline-block
  padding-bottom 5px

.title span.main
  padding-left 5px

.title span.info
  padding-right 5px
  float right

.title span.info.user
  text-decoration underline
  cursor pointer

.title a
  color #fffef7

.create-item input
  width 100%
  height 40px
  margin-top 25px
  padding-left 5px
  padding-right 0
  border 1px solid gray
  font 18px HelveticaNeue, Helvetica
  box-shadow(0, 3px, 5px, #000000)
  box-sizing-border()

.item-list li
  font-family: Georgia, "Times New Roman", Helvetica, Arial, sans-serif
  border 1px solid gray
  background-color #f5f5f5
  padding 5px

  .item-date
    font-size 14px
    color #009acd
    display inline-block

  .item-text
    font-size 21px
    margin-top 5px
    display block

.item-list input[type='button']
  float right
  margin 1px 0 1px 10px
  padding 12px 8px 12px 8px

.item-list input.delete[type='button']
  display none

.login
  font 1.2em 'Helvetica Neue', helvetica, arial, sans-serif
  color #555555

.login input[type='text'], input[type='password']
  width 100%
  font-size 1.2em
  color #555555
  border 1px solid #cccccc
  box-sizing-border()
  box-shadow(rgba(0,0,0,0.2), 0, 1px, 2px, 0, inset)

.login input[type='submit']
  padding 1em
  font-size 1.2em
  box-shadow(0, 1px, 0, rgba(255, 255, 255, 0.2), 0, 1px, 2px, rgba(0, 0, 0, 0.05))

.login div.message
  padding 10px

.login span
  display block
  font-size 1em
  text-align center

.login span.warn
  color red

.login span.info
  color #6495ed

.login a.signup
  float right

input::-webkit-input-placeholder
  font-style italic
